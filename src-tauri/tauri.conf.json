{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipper",
  "version": "0.1.0",
  "identifier": "com.clipper.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "clipper",
        "width": 640,
        "height": 490,
        "minWidth": 640,
        "minHeight": 490,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' proxy: http: https: data: localhost:; script-src 'self'; style-src 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}